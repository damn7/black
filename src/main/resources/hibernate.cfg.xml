<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://127.0.0.1:3306/black</property>
        <property name="connection.username">black</property>
        <property name="connection.password">mypassword</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.c3p0.initialPoolSize">10</property>
        <property name="hibernate.c3p0.minPoolSize">1</property>
        <property name="hibernate.c3p0.maxPoolSize">25</property>
        <property name="hibernate.c3p0.acquireRetryAttempts">10</property>
        <property name="hibernate.c3p0.acquireIncrement">5</property>
        <property name="hibernate.c3p0.idleConnectionTestPeriod">3600</property>
        <property name="hibernate.c3p0.maxIdleTime">10800</property>
        <property name="hibernate.c3p0.maxConnectionAge">14400</property>
        <property name="hibernate.c3p0.preferredTestQuery">SELECT 1; </property>
        <property name="hibernate.c3p0.testConnectionOnCheckin">false</property>
        <property name="hibernate.c3p0.timeout">1800</property>

        <!-- Names the annotated entity class -->
        <mapping class="org.wizindia.black.domain.User"/>
        <mapping class="org.wizindia.black.domain.Roles"/>
        <mapping class="org.wizindia.black.domain.Feed"/>
        <mapping class="org.wizindia.black.domain.Context"/>
    </session-factory>

</hibernate-configuration>